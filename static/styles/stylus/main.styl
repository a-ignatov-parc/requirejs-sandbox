@import 'nib'
global-reset()
arial-font-family = Arial, Helvetica, sans-serif
pt-sans-font-family = 'PT Sans', sans-serif

html {
	font-size: 100.01%;
}

body {
	font: .9375em arial-font-family;
	color: #000;
}

.b-content {
	font-size: 12px;
	padding: 10px;
}

.b-jquery {
	display: block;

	&-block {
		line-height: 1.666em;
		border-radius: 5px;
		border: 1px #ccc solid;
		padding: 10px;
		margin: 2px;
		display: inline-block;
		vertical-align: top;
	}
}

.b-code {
	font: 12px Consolas, "Liberation Mono", Courier, monospace;
	margin: 0 2px;
	padding: 0px 5px;
	border: 1px solid #eaeaea;
	background-color: #f8f8f8;
	border-radius: 3px;
}
